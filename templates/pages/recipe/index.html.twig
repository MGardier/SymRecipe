{% extends 'base.html.twig' %}

{% block title %}Symrecipe - Mes recettes
{% endblock %}

{% block body %}

	<div class="container mt-4">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4 alert-dismissible ">
				<i class="bi-check-circle-fill"></i>
				<strong class="mx-2">Succés!</strong>
				{{ message }}
				<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
			</div>
		{% endfor %}
		{% if not recipes.items is same as([]) %}
			<h1>
				Mes recettes
			</h1>

			<div class="count">
				<h4>
					Il y a
					{{recipes.getTotalItemCount  }}
					recette(s) au total
				</h4>
			</div>
			<table class="table table-hover">
				<thead>
					<tr class="table-info">
						<th scope="col">Numéro</th>
						<th scope="col">Nom</th>
						<th scope="col">Temps</th>
						<th scope="col">Difficulté</th>
						<th scope="col">Nombres de personnes</th>
						<th scope="col">Description</th>
						<th scope="col">Prix</th>
						<th scope="col">Crée le
						</th>
						<th scope="col">Modifé le</th>
						<th scope="col">Voir</th>
						<th scope="col">Modifier</th>
						<th scope="col">Supprimer</th>
					</tr>
				</thead>
				<tbody>
					{% for recipe in recipes %}

						<tr>
							<td>{{recipe.id}}</td>
							<td>{{recipe.name}}</td>
							<td>{{recipe.time}}</td>
							<td>{{ recipe.difficulty is null ? 'Non renseigné' : recipe.difficulty}}</td>
							<td>{{recipe.numberPeople}}</td>
							<td>{{recipe.description|slice(0, 50) ~ ' ...'}}</td>
							<td>{{ recipe.price is null ? 'Non renseigné' : recipe.price|number_format(2, '.', ',') }}€</td>
							<td>{{recipe.createdAt|date('d/m/Y')}}</td>
							<td>{{recipe.updatedAt|date('d/m/Y')}}</td>
							<td>
								<a href="{{ path('recipe.show', {id: recipe.id}) }}" type="button" class="btn btn-outline-info">Voir</a>
							</td>
							<td>
								<a href="{{ path('recipe.update', {id: recipe.id}) }}" type="button" class="btn btn-outline-info">Modifier</a>
							</td>
							<td>
								<a href="{{ path('recipe.delete', {id: recipe.id}) }}" type="button" class="btn btn-outline-danger">Supprimer</a>
							</td>
						</tr>

					{% endfor %}
				</tbody>
			</table>
			<div class="navigation d-flex justify-content-center">
				{{ knp_pagination_render(recipes) }}
			</div>
		{% else %}
			<h4>
				Il n'y a pas de recettes
			</h4>
		{% endif %}
		<a href="{{ path('recipe.create')}}" class="btn btn-info mt-4">
			Ajouter une nouvelle recette
		</a>
	</div>

{% endblock %}
