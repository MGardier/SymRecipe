{% extends 'base.html.twig' %}

{% block title %}Symrecipe - Mes recettes
{% endblock %}

{% block body %}

	<div class="container mt-4">
		{% for message in app.flashes('success') %}
			<div class="text-dark alert alert-success">
				{{message}}
			</div>
		{% endfor %}
		{% if not recipes.items is same as([]) %}
			<h1>
				Mes recettes
			</h1>
			
			<div class="count">
				<h4>
					Il y a
					{{recipes.getTotalItemCount  }}
					recettes au total
				</h4>
			</div>
			<table class="table table-hover">
				<thead>
					<tr class="table-primary">
						<th scope="col">Numéro</th>
						<th scope="col">Nom</th>
						<th scope="col">Temps</th>
						<th scope="col">Difficulté</th>
						<th scope="col">Nombres de personnes</th>
						<th scope="col">Description</th>
						<th scope="col">Prix</th>
						<th scope="col">Crée le </th>
						<th scope="col">Modifé le</th>
						<th scope="col">Editer</th>
						<th scope="col">Supprimer</th>
					</tr>
				</thead>
				{% for recipe in recipes %}
					<tbody>
						<tr class="table-secondary">
							<td>{{recipe.id}}</td>
							<td>{{recipe.name}}</td>
							<td>{{recipe.time}}</td>
							<td>{{ recipe.difficulty is null ? 'Non renseigné' : recipe.difficulty}}</td> 
							<td>{{recipe.numberPeople}}</td>
							<td>{{recipe.description}}</td>
							<td>{{ recipe.price is null ? 'Non renseigné' : recipe.price}}</td> 
							<td>{{recipe.createdAt|date('d/m/Y')}}</td>
							<td>{{recipe.updatedAt|date('d/m/Y')}}</td>
							<td><a href="{{ path('recipe.edit', {id: recipe.id}) }}" type="button" class="btn btn-primary">Modifier</a></td>
							<td><a href="{{ path('recipe.delete', {id: recipe.id}) }}" type="button" class="btn btn-danger">Supprimer</a></td>
						</tr>
					</tbody>
				{% endfor %}
			</table>
			<div class="navigation d-flex justify-content-center">
				{{ knp_pagination_render(recipes) }}
			</div>
		{% else %}
			<h4>
				Il n'y a pas de recettes
			</h4>
		{% endif %}
		 <a href="{{ path('recipe.new')}}" class="btn btn-primary mt-4"> Ajouter une nouvelle recette </a> 
	</div>

{% endblock %}

