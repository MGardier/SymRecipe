{% extends 'base.html.twig' %}

{% block title %}SymRecipe - Profil
{% endblock %}

{% block body %}
	<section>
		<div class="container py-5">
			<div class="row">
				<div class="col-lg-4">
					<div class="card mb-4">
						<div class="card-body text-center">
							<img src="{{ asset('build/img/avatar-default.svg') }}" alt="avatar" class="rounded-circle img-fluid w-25">
							<h5 class="my-3">John Smith</h5>
							<div class="d-flex justify-content-center mb-2">
								<a class="btn btn-outline-info" href="{{ path('user.update',{id : app.user.id})}}">Modifier mes informations</a>
							</div>
							<div class="d-flex justify-content-center mb-2">
								<a class="btn btn-outline-info" href="{{ path('user.update.password',{id : app.user.id})}}">Modifier mon mot de passe</a>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-8">
					<div class="card mb-4">
						<div class="card-body">
							<div class="row">
								<div class="col-sm-3">
									<p class="mb-0">Nom</p>
								</div>
								<div class="col-sm-9">
									<p class=" mb-0">{{ user.fullName }}</p>
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<p class="mb-0">Pseudo</p>
								</div>
								<div class="col-sm-9">
									{% if user.pseudo %}
										<p class=" mb-0">{{ user.pseudo }}</p>
									{% else %}
										<p class=" mb-0">Non renseigné</p>
									{% endif %}
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<p class="mb-0">Email</p>
								</div>
								<div class="col-sm-9">
									<p class=" mb-0">{{ user.email }}</p>
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<p class="mb-0">Créer le :</p>
								</div>
								<div class="col-sm-9">
									<p class=" mb-0">
										{{user.createdAt|date("d-m-Y") }}</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>{% endblock %}
