{% extends 'base.html.twig' %}

{% block title %}SymRecipe - Mes ingredients
{% endblock %}

{% block body %}

	<div class="container mt-4">
		{% for message in app.flashes('success') %}
			<div class="text-white alert alert-success">
				{{message}}
			</div>
		{% endfor %}
		{% if not ingredients.items is same as([]) %}
			<h1>
				Mes ingrédients
			</h1>

			<div class="count">
				<h4>
					Il y a
					{{ingredients.getTotalItemCount  }}
					ingrédient(s) au total
				</h4>
			</div>
			<table class="table table-hover">
				<thead>
					<tr class="table-primary">
						<th scope="col">Numéro</th>
						<th scope="col">Nom</th>
						<th scope="col">Prix</th>
						<th scope="col">Date</th>
						<th scope="col">Modifier</th>
						<th scope="col">Supprimer</th>
					</tr>
				</thead>
				{% for ingredient in ingredients %}
					<tbody>
						<tr>
							<td>{{ingredient.id}}</td>
							<td>{{ingredient.name}}</td>
							<td>{{ingredient.price|number_format(2, '.', ',') }}€</td>
							<td>{{ingredient.createdAt|date('d/m/Y')}}</td>
							<td>
								<a href="{{ path('ingredient.update', {id: ingredient.id}) }}" type="button" class="btn btn-outline-primary">Modifier</a>
							</td>
							<td>
								<a href="{{ path('ingredient.delete', {id: ingredient.id}) }}" type="button" class="btn btn-outline-danger">Supprimer</a>
							</td>

						</tr>
					</tbody>
				{% endfor %}
			</table>
			<div class="navigation d-flex justify-content-center">
				{{ knp_pagination_render(ingredients) }}
			</div>
		{% else %}
			<h4>
				Il n'y a pas d'ingrédients
			</h4>
		{% endif %}
		<a href="{{ path('ingredient.create')}}" class="btn btn-primary mt-4">
			Ajouter un nouvel ingrédient</a>
	</div>

{% endblock %}
